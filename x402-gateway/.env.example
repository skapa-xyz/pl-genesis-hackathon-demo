# WeatherXM Pro API Key
WEATHERXM_API_KEY=your_weatherxm_api_key_here

# x402 Facilitator URL (defaults to local facilitator on host machine)
# For local development: http://host.docker.internal:8080
# For production, use: https://x402.org/facilitator
X402_FACILITATOR_URL=http://host.docker.internal:8080

# Payment configuration
PAYMENT_ADDRESS=0xYourWalletAddressHere

# Amount in atomic units (e.g., 1000000 for USDC with 6 decimals = $1.00)
MAX_AMOUNT_REQUIRED=1000000

# Blockchain network (e.g., base-sepolia, base, filecoin-calibration)
NETWORK=filecoin-calibration

# Token contract address (example: USDFC on Filecoin Calibration)
# For other networks/tokens, see the x402 documentation
ASSET_ADDRESS=0xCD928583440157eDfB744201cb69dEeBDEe62bb8

# Payment timeout in seconds (default: 300 = 5 minutes)
MAX_TIMEOUT_SECONDS=300

# Valid test token for mock facilitator (deprecated - use proper x402 payment)
VALID_TEST_TOKEN=test-valid-token